<h1 class="current-category"><%= params[:category] %></h1>

<% if @books.count == 0 %>

    <h1 class="cat-stat">There are no books currently in this category</h1>

<% else %>

    <div class="row">
      <div class="col-sm-8 col-sm-offset-2">
        <div class="searchform">
          <%= form_tag search_books_path, method: :get, role: "search" do %>
              <p>
                <%= text_field_tag :search, params[:search],  class: "form-control", placeholder: "Search book" %>
                <!--<%= submit_tag "Search", name: nil, class: "btn btn-custom" %>-->
              </p>
          <% end %>
        </div>
      </div>
    </div>

    <div class="container-fluid cont">
      <div class="text-center">
        <%= will_paginate @books, renderer: BootstrapPagination::Rails %>
      </div>
      <div class="row">

        <% @books.each do |book| %>

            <div class="col-md-3 col-xs-4 col-mob-6 flexbox">
                <a href="/books/<%= book.id %>">
                  <%= image_tag book.book_img.url(:book_index), class: "book" %>
                </a>
            </div>

        <% end %>
      </div>
      <div class="text-center">
        <%= will_paginate @books, renderer: BootstrapPagination::Rails %>
      </div>
    </div>

<% end %>
